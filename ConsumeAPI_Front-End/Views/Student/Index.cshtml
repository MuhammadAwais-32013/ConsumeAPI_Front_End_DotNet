@{
}

@model List<ConsumeAPI_Front_End.Models.Student>

<h1>Students</h1>
<table class="table">
    <a asp-controller="Student" asp-action="Create" class="btn btn-primary float-end mx-3 me-2">Add Student</a>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Semester</th>
            <th>Cgpa</th>
            <th>shift</th>
            <th>Action</th>
        </tr>
    </thead>
      @foreach ( var student in Model)
    {
     <tr>

            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Email</td>
            <td>@student.Semester</td>
            <td>@student.Cgpa</td>
            <td>@student.shift</td>
            <td>
                <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-info text-white">Edit</a>
                |
                <form method="post" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="d-inline">
                <input type="submit" class="btn btn-danger" value="Delete" />
             </form>
            </td>

     </tr>   
    }
    <tbody>

    </tbody>
</table>

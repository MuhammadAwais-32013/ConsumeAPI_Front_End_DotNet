@model ConsumeAPI_Front_End.Models.Student

<div class="container">
    <h1>Edit Student</h1>
    <form method="post" class="w-50 d-block mx-auto">
        <div class="mb-3">
            <label for="ID" class="form-label">ID:</label>
            <input type="text" class="form-control" asp-for="@Model.Id" readonly id="id" />
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Please enter Student name:</label>
            <input type="text" class="form-control" asp-for="@Model.Name" id="name" />
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Please enter Student Email:</label>
            <input type="text" class="form-control" asp-for="@Model.Email" id="Email" />
        </div>
        <div class="mb-3">
            <label for="Semester" class="form-label">Please enter Student Semester:</label>
            <input type="text" class="form-control" asp-for="@Model.Semester" id="Semester" />
        </div>
        <div class="mb-3">
            <label for="Cgpa" class="form-label">Please enter Student Cgpa:</label>
            <input type="text" class="form-control" asp-for="@Model.Cgpa" id="Cgpa" />
        </div>
        <div class="mb-3">
            <label for="shift" class="form-label">Please enter Student shift:</label>
            <input type="text" class="form-control" asp-for="@Model.shift" id="shift" />
        </div>
        <div class="mb-3">
            <input type="submit" value="Save" class="btn btn-primary d-block mx-auto" />
        </div>
    </form>
</div>
